<h1>List of posts</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Options</th>
    </tr>
  </thead>
<%  @posts.each do |post| %>
  <tr>
     <td><%= link_to post.title,{:action => "show", :id => post.id} %></td>
     <td><%= link_to 'Edit', {:action => "edit",:id => post.id} %>
	     <%= link_to 'Delete', post_path(post),
	                                   method: :delete,               
									   data: { confirm: 'Are you sure?' } %></td> 
  </tr>
<% end %>
</table>
<br/>
<p><%= link_to 'New Post', :action => 'new' %></p>


